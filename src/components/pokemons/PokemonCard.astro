---

interface Props {
  name: string;
  url: string;
  isBig?: boolean;
}

const { name, url, isBig = false } = Astro.props;
const id = url.split('/').at(-2);
const imageUrl = `https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/${id}.png`;
---

<a href={`/pokemons/${name}`} 
  class:list={[`bg-gray-50 p-3 flex flex-col gap-1 rounded-2xl`, {'w-96 h-96': isBig}, {'w-60 h-64': !isBig}]}
  >
  <div class:list={[`bg-gray-700 rounded-xl`, {'h-80': isBig}, {'h-48': !isBig}]}>
    <img transition:name={`${name}-image`} src={imageUrl} alt={name} />
  </div>
  <div class="flex flex-col gap-4">
    <div class="flex flex-row justify-between">
      <div class="flex flex-col">
        <span class="text-xl font-bold">{name}</span>
        <p class="text-xs text-gray-700">ID: {id}</p>
      </div>
    </div>
  </div>
</a>